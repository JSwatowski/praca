@model inzynierka.Models.StorageCardVM

@{
    ViewData["Title"] = "Storage card";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>List of your movies</h4>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.StorageCard.StorageCardItems)
                {
                <tr>
                    <td class="col-md-2">
                        <img src="@item.Movie.ImageURL" width="100%" alt="@item.Movie.Name">
                    </td>
                    <td class="align-middle">@item.Movie.Name</td>
                    <td class="align-middle">
                        <a class="btn btn-danger text-white float-right" asp-controller="Storages" asp-action="AddToStorageCard" asp-route-id="@item.Id"> Remove</a>
                        <a class="btn btn-outline-primary float-md-right" asp-action="Details" asp-route-id="@item.Id"> Show Details</a>
                        <a class="btn btn-outline-primary float-md-right" asp-action="Details" asp-route-id="@item.Id"> Watched</a>
                    </td>
                </tr>
                }
            </tbody>         
        </table>

        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn-outline-success" asp-controller="Movies" asp-action="Index">
                    BackToList
                </a>
                <a class="btn btn-outline-success" asp-action="AddItemsToStorage">
                    Add to storage
                </a>
            </div>
        </div>
    </div>
</div>