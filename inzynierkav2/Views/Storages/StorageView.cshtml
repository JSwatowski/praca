
@model IEnumerable<inzynierka.Models.Storage>
@{
    ViewData["Title"] = "Storage";
}

<div class="row">

    <div class="col-md-8 offset-2">
        <p>
            <div class="text-center">
                <h4>Your library</h4>
            </div>
        </p>
      
        <table class="table">

            <tr>
                <th></th>
                <th>Title</th>
            </tr>

            <tbody>

                @foreach (var storage in Model)
                {
                    @foreach (var item in storage.StorageItems.Where(x => x.IsWatched != "Watched"))
                    {
                        <tr>

                            <td class="col-md-2">
                                <img src="@item.Movie.ImageURL" width="100%" alt="@item.Movie.Name">
                            </td>
                            <td class="align-middle">@item.Movie.Name</td>
                            <td class="align-middle">
                                <a class="btn btn-danger text-white float-md-right" asp-controller="StorageItems" asp-action="Delete" asp-route-id="@item.Storage.Id"> Delete</a>
                                <a class="btn btn-outline-primary float-md-right" asp-controller="Movies" asp-action="Details" asp-route-id="@item.Movie.Id"> Show Details</a>
                                <a class="btn btn-outline-success float-md-right" asp-action="CheckWatched" asp-route-id="@item.Id"> Watched</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">
                    Back to home
                </a>

            </div>
        </div>

    </div>
</div>