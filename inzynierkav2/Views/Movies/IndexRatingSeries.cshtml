@model IEnumerable<pracainz.Models.Movie>

@{
    ViewData["Title"] = "IndexRating";
}

<div class="row">

    <div class="col-md-8 offset-2">
        <p>
            <h4>Ranking of series</h4>
        </p>

        <table class="table">
            
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Rate</th>
                </tr>
            
            <tbody>

                @foreach (var item in Model.OrderByDescending(x => x.OverallRating))
                {
                    if (item.MovieTypeId == 2)
                    {
                    <tr>
                        <td class="col-md-2">
                            <img src="@item.ImageURL" width="100%" alt="@item.Name">
                        </td>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">@item.OverallRating</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary float-md-right" asp-action="Details" asp-route-id="@item.Id"> Show Details</a>
                        </td>
                    </tr>
                    }
                }

            </tbody>
        </table>

        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn-outline-success" asp-controller="Movies" asp-action="IndexSeries">
                    BackToList
                </a>

            </div>
        </div>

    </div>
</div>