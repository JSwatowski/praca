@model IEnumerable<pracainz.Models.Movie>

@{
    ViewData["Title"] = "List of movies";
}
<div class="container-fluid text-center">
    <form class="d-flex  text-center" asp-controller="Movies" asp-action="Filter" style="padding-left: 650px; padding-right: 650px">
        <input name="searchString" type="text" class="form-control me-sm-2" placeholder="Type movies name" aria-label="Recipient's username" aria-describedby="button-addon2">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>

    </form>
</div>
<div class="row">

    <div class="text-white" style="position: fixed; right: 100px; bottom: 100px;">
        <a asp-controller="Movies" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add</a>
    </div>
    <div class="col-md-8 offset-2">
        <p>
            <h4>All movies</h4>
        </p>

        <table class="table">
        
                <tr>
                    <th></th>
                    <th>Title</th>
                </tr>
           
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="col-md-2">
                            <img src="@item.ImageURL" width="100%" alt="@item.Name">
                        </td>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">
                            <a class="btn btn-danger text-white float-right" asp-action="Delete" asp-route-id="@item.Id"> Delete</a>
                            <a class="btn btn-outline-primary float-md-right" asp-action="Details" asp-route-id="@item.Id"> Show Details</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

        <div class="text-center">
            <div class="btn-group">
                <a class="btn btn-outline-success" asp-controller="Movies" asp-action="Index">
                    BackToList
                </a>

            </div>
        </div>

    </div>
</div>

<div class="text-white" style="position: fixed; right: 100px; bottom: 100px;">
    <a asp-controller="Movies" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add</a>
</div>