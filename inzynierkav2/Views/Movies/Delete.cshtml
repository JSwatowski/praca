@model pracainz.Models.Movie


@{
    ViewData["Title"] = "Delete movie ";
}


<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete for @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <tr>
                    <td class="align-middle">@Model.Name</td>
                    <td class="col-md-2">
                        <img src="@Model.ImageURL" width="50%" alt="@Model.Name">
                    </td>


                </tr>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="AdminIndex">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>